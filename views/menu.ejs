    .cart-section ul li:hover {
        background: #444;
    }

    .remove-btn {
        background: #ff4c4c;
        border: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

    .remove-btn:hover {
        background: #d93d3d;
    }

    .cart-footer {
