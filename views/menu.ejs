        }

        nav ul {
            display: flex;
            list-style: none;
        }

        nav ul li {
            margin-left: 20px;
        }

        nav ul li a {
            color: #e0e0e0;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s;
        }

        nav ul li a:hover {
            color: #f8c74c;
        }

        
        .menu-section {
            padding: 50px 20px;
            text-align: center;
            animation: fadeInUp 1.5s ease-out;
        }

        .menu-section h1 {
            font-size: 2.5rem;
            color: #f8c74c;
            margin-bottom: 20px;
        }

        .menu-section p {
            font-size: 1.2rem;
            color: #cccccc;
            margin-bottom: 40px;
        }

        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 0 20px;
        }

        .menu-item {
            background: #1e1e1e;
            border-radius: 10px;
            padding: 20px;
            text-align: left;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s, box-shadow 0.3s;
            opacity: 0;
            animation: fadeInItem 1s forwards; /* Item fade-in animation */
        }

        .menu-item:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .menu-item img {
            width: 100%;
            height: 200px;
            border-radius: 10px;
            margin-bottom: 15px;
            object-fit: cover;
        }

        .menu-item h3 {
            font-size: 1.5rem;
            color: #f8c74c;
            margin-bottom: 10px;
        }

        .menu-item p {
            font-size: 1rem;
            color: #cccccc;
            margin-bottom: 10px;
        }

        .menu-item .price {
            font-size: 1rem;
            color: #e0e0e0;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .menu-item .add-to-cart {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            color: #121212;
            background: #f8c74c;
            border-radius: 25px;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }

        .menu-item .add-to-cart:hover {
            background: #ffae42;
        }

        
        .cart-section {
        padding: 20px;
        background: #1e1e1e;
        border-radius: 10px;
        max-width: 500px;
        margin: 20px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        animation: fadeInCart 1s ease-out;
        text-align: center;
    }

    .cart-container {
        padding: 15px;
        border-radius: 8px;
        background: #252525;
    }

    .cart-section h2 {
        color: #f8c74c;
        margin-bottom: 15px;
    }

    .cart-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
        max-height: 200px;
        overflow-y: auto;
    }

